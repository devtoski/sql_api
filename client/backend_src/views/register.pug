extends layout 

block content 
    h1 Register
    form(method='POST', action="/users/register") 
        .form-group 
            label First Name: 
            input.form-control(name='first_name' type="text")
        .form-group 
            label Last Name: 
            input.form-control(name='last_name' type="text")
        .form-group 
            label Phone Number: 
            input.form-control(name='phone_number' type="text")
        .form-group 
            label Email: 
            input.form-control(name='email' type="email")
        .form-group 
            label Username: 
            input.form-control(name='username' type="username")
        .form-group 
            label Password: 
            input.form-control(name='password' type="password")
        .form-group 
            label Confirm: 
            input.form-control(name='password2' type="password")
        br
        input.btn.btn-primary(type="submit", value="Register")